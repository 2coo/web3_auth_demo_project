{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["ES6"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "./.eslintrc.cjs"]
}
